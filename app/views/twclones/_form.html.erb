<%= form_with(model: @twclone, local: true, url: choose_new_or_edit) do |form| %>
  <% if @twclone.errors.any? %>
    <h2><%= @twclone.errors.count %> errors found.</h2><br>
    <ul>
      <% @twclone.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form.label :content %>
  <%= form.text_field :content %><br>
  <%= form.submit 'Tweet' %>
<% end %>